<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
        <ul>
          <% @user.errors.full_messages.each do |user| %>
            <li>
              <%= full_message %>
            </li>
          <% end %>
        </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <label for="user_name" class="control-label col-md-2">名前:</label>
    <div class="col-md-4">
      <%= f.text_field :name ,:class => "form-control"%>
    </div>
  </div>
  
  <div class="form-group">
    <label for="user_email" class="control-label col-md-2">メールアドレス:</label>
    <div class="col-md-4">
      <%= f.text_field :email ,:class => "form-control"%>
    </div>
  </div>
  
  <div class="form-group">
    <label for="user_favorite" class="control-label col-md-2">趣味:</label>
    <div class="col-md-4">
      <%= f.text_area :favorite,:class => "form-control" %>
    </div>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
  <% end %>