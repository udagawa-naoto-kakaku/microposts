<div class="row">
  <aside class="col-md-4">
    <section class = "user_info">
      <h1>
        
        <%= gravatar_for @user %>
        
        <%= @user.name %>
        <p>メールアドレス：<%= @user.email %></p>
        <p>趣味：<%= @user.favorite %></p>
        (<%= link_to "edit", edit_user_path(@user)%> /
        <%= link_to "destroy", @user, method: :delete, data: { confirm: '削除してもよろしいですか？' } %>)
        <%= link_to "follower", followings_user_path(@user) %>
        <%= link_to "followed", followed_user_path(@user) %>

      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    
  <%= render 'follow_form' if logged_in? %>
    
    <% if @user.microposts.any? %>
    
      <h3>Microposts(<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
